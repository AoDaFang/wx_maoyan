.select_box::after{
	content: "";
	display: block;
	bottom: -1px;
	width: 254rpx;
	height: 12rpx;
	background-color: #ef4238;
	-webkit-transition:left 0.2s;
	transition: left 0.2s;
	position: absolute;
	top: 76rpx;
	left: 60rpx;
}
