	justify-content: space-between;
}
.msg_inp{
	background-color: #EBEBE4;
	width: 710rpx;
	height: 74rpx;
	border-radius: 5px;
	padding-left: 20rpx;
}
.msg_btn{
	margin-top: 30rpx;
	margin-left: 30rpx;
	margin-right: 30rpx;
	width: 696rpx;
	height: 94rpx;
	line-height: 94rpx;
	background-color: #DCDCDC;
	color: #9B9B9B;
	font-size: 38rpx;
}
.msg_btn.isPhone{
