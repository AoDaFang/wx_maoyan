/* 手机号 */
.phone_info{
	box-sizing: border-box;
	width: 100%;
	height: 112rpx;
	border-bottom: 1px solid #DDDDDD;
	padding: 20rpx 24rpx;
	display: flex;
	justify-content: space-between;
}
.phone_inp{
	width: 446rpx;
	height: 74rpx;
	background-color: #DCDCDC;
	border-radius: 5px;
	padding-left: 20rpx;
}
.phone_info button{
	margin-left:11rpx;
	width:247rpx;
	height: 74rpx;
	background-color: #DCDCDC;
	color: #A2A2A2;
	line-height: 74rpx;
	font-size: 37rpx;
}
.phone_info button.isPhone{
	color: #DF2D2D;
	border: 1px solid #DF2D2D;
	background-color: white;
}
.msg_info{
	box-sizing: border-box;
	width: 100%;
	height: 112rpx;
	border-bottom: 1px solid #DDDDDD;
	padding: 20rpx 20rpx;
